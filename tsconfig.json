{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"noEmitOnError": true,
		"jsx": "react-native",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./*"],
			"~/*": ["./*"],
			"nodeWorker": ["./nodejs-assets/nodejs-project/src/index.ts"]
		}
	},
	"include": [
		"app/**/*.ts",
		"app/**/*.tsx",
		"assets/**/*.ts",
		"assets/**/*.tsx",
		"components/**/*.ts",
		"components/**/*.tsx",
		"hooks/**/*.ts",
		"hooks/**/*.tsx",
		"lib/**/*.ts",
		"lib/**/*.tsx",
		"plugins/**/*.ts",
		"plugins/**/*.tsx",
		"providers/**/*.ts",
		"providers/**/*.tsx",
		"services/**/*.ts",
		"services/**/*.tsx",
		"nodejs-assets/**/*.ts",
		"nodejs-assets/**/*.tsx",
		"queries/**/*.ts",
		"queries/**/*.tsx",
		"stores/**/*.ts",
		"stores/**/*.tsx",
		"theme/**/*.ts",
		"theme/**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"lib/**/*.d.ts",
		"nativewind-env.d.ts",
		"index.d.ts",
		"app.config.ts"
	],
	"exclude": ["nodejs-assets/**/*", "android/**/*", "ios/**/*", ".vscode/**/*", ".expo/**/*"]
}
